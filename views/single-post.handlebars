<div class="single-post-handeler">
  <article class="post">
    <div class="title">
      <p>{{post.title}}</p>
      <a href="{{post.post_url}}" target="_blank">link</a>
    </div>
    <div class="meta">
      {{post.vote_count}} point(s) by {{post.user.username}} on
      {{post.created_at}}
      |
      <a href="/post/{{post.id}}">{{post.comments.length}} comment(s)</a>
    </div>
  </article>

  <form class="comment-form">
    <div class="comment-body-handler">
      <textarea name="comment-body"></textarea>
    </div>

    <div class="btn">
      <button type="submit">add comment</button>
      <button type="button" class="upvote-btn">upvote</button>
    </div>
  </form>
</div>

<div class="comments">
  {{#each post.comments}}
  <section class="comment">
    <div class="meta">
      {{user.username}} on {{created_at}}
    </div>
    <div class="text">
      {{comment_text}}
    </div>
  </section>
  {{/each}}
</div>
<script src="/javascript/comment.js"></script>
<script src="/javascript/upvote.js"></script>